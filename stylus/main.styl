@import "normalize"
@import "font-awesome"

*, *:before, *:after
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

.container 
  margin: 0 auto
  max-width: 48rem
  width: 90%

@media (min-width: 40rem)
  .column
    float: left
    padding-left: 1rem
    padding-right: 1rem

      &.full  
        width: 100%
      &.two-thirds 
        width: 66.7%
      &.half
        width: 50%
      &.third
        width: 33.3%
      &.fourth
        width: 25%
      &.flow-opposite
        float: right
 
.clearfix
  *zoom: 1

  &:after
    clear: both

  &:after, &:before
    content: ""
    display: table

.hero-unit
  text-align: center

  a
    color: black
    text-decoration: none

    &:hover
      text-decoration: underline

h1
  font-family: "Open Sans", sans-serif
  font-weight: 700
  font-size: 40px
  padding-top: 1em
  @media screen and (max-width: 497px)
    font-size: 32px

h2
  font-family: "Lato", sans-serif
  font-size: 30px
  @media screen and (max-width: 497px)
    font-size: 26px

p
  font-family: "Lato", sans-serif
  font-weight: 400
  font-size: 22px
  color: #666
  letter-spacing: 0.01rem
  line-height: 1.5
  @media screen and (max-width: 497px)
    font-size: 18px

a
  color: blue

small
  font-family: "Lato", sans-serif
  font-size: 16px
  @media screen and (max-width: 497px)
    font-size: 12px

.footer
  text-align: center
  margin: 2em

.contact
  text-align: center

  a
    padding: 1em
    font-size: 3em
    color: black

    &:hover
      color: #666

    @media screen and (max-width: 497px)
      font-size: 2em

    @media screen and (max-width: 340px)
      font-size: 1em

.project
  display: block
  height: 196px
  color: black
  text-decoration: none

  &:hover
    opacity: 0.7

  img
    float: left
    width: 300px
    height: auto
    padding: 1px
    margin-right: 5px
    border: 1px solid #aaa

    @media screen and (max-width: 340px)
      width: 230px

  h3
    margin: 0

  p
    margin: 0.8em
    font-size: 16px

  small
    font-size: 12px
    font-weight: 100
    font-style: italic 

  @media screen and (max-width: 650px)
    height: auto
    margin-bottom: 1em

    img
      float: none
      margin: 0

    p
      margin: 0.5em 0 0 0

.post
  h3
    margin: -1rem 0 2rem .1rem
    font-family: "Lato", sans-serif
    font-weight: 100
    color: #ccc

  p
    font-family: "PT Serif", Georgia, "Times New Roman", serif

  img
    display: block
    max-width: 100%
    height: auto
