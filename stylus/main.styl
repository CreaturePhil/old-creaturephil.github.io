@import "normalize"
@import "font-awesome"

*, *:before, *:after
  -moz-box-sizing: border-box
  -webkit-box-sizing: border-box
  box-sizing: border-box

.container 
  margin: 0 auto
  max-width: 48rem
  width: 90%

@media (min-width: 40rem)
  .column
    float: left
    padding-left: 1rem
    padding-right: 1rem

      &.full  
        width: 100%
      &.two-thirds 
        width: 66.7%
      &.half
        width: 50%
      &.third
        width: 33.3%
      &.fourth
        width: 25%
      &.flow-opposite
        float: right
 
.clearfix
  *zoom: 1

  &:after
    clear: both

  &:after, &:before
    content: ""
    display: table

body
  border-top: 3px solid black

.hero-unit
  text-align: center

h1
  font-family: "Open Sans", sans-serif
  font-weight: 700
  font-size: 40px
  padding-top: 1em
  @media screen and (max-width: 497px)
    font-size: 32px

h3
  font-family: "Lato", sans-serif
  font-size: 30px
  @media screen and (max-width: 497px)
    font-size: 26px

p
  font-family: "Lato", sans-serif
  font-weight: 400
  letter-spacing: 0.01rem
  font-size: 22px
  line-height: 1.5
  @media screen and (max-width: 497px)
    font-size: 18px

.footer
  text-align: center
  margin: 2em

small
  font-family: "Lato", sans-serif
  font-size: 16px
  @media screen and (max-width: 497px)
    font-size: 12px
